<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Scheduler1215" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2979FF</item>
        <item name="colorPrimaryVariant">#004D40</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.NoInsets</item>
    </style>

    <style name="Widget.MaterialComponents.Button.NoInsets"
        parent="Widget.MaterialComponents.Button" >
        <!-- Here you can customize the drawable insets! -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:insetTop">1dp</item>
        <item name="android:insetBottom">2dp</item>
    </style>
</resources>